<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd             http://camel.apache.org/schema/spring            http://camel.apache.org/schema/spring/camel-spring.xsd">
    <routeContext id="routeBS9_CreateOrder" xmlns="http://camel.apache.org/schema/spring">
        <route id="bs9_route3">
            <from id="bs9_from1" uri="direct:bs_9"/>
            <log id="bs9_log1" message="Hello World BS9 at ${date:now}"/>
            <setProperty id="bs9_setProperty1" propertyName="timestamp">
                <simple resultType="java.lang.Long">
        			${date:now}
        		</simple>
            </setProperty>
            <!--      		Checkpoint request accepted -->
            <wireTap id="bs9_wireTap1" uri="direct:gen_log"/>
            <process id="bs9_process1" ref="killRoute"/>
            <bean id="bs9_bean1"
                method="generatePayload({{appId.createorder}})" ref="generatePayload"/>
            <to id="bs9_to1" uri="direct:gen_sign"/>
            <marshal id="bs9_marshal1" ref="jackson"/>
            <!--        		Checkpoint request payload ready to send to backend -->
            <wireTap id="bs9_wireTap2" uri="direct:gen_log"/>
            <log id="bs9_log2" message=">>>> Request Body to Backend: \n${body}"/>
            <removeHeaders id="bs9_removeHeaders1" pattern="Camel*"/>
            <setHeader headerName="CamelHttpMethod" id="bs9_setHeader1">
                <constant>POST</constant>
            </setHeader>
            <setHeader headerName="CamelHttpPath" id="bs9_setHeader2">
                <simple>{{service.createorder.url}}</simple>
            </setHeader>
            <setHeader headerName="Content-Type" id="bs9_setHeader3">
                <constant>application/json</constant>
            </setHeader>
            <to id="bs9_to2" uri="https4://{{bs.env}}?bridgeEndpoint=true&amp;connectionClose=true&amp;throwExceptionOnFailure=false"/>
            <unmarshal id="bs9_unmarshal1" ref="jackson"/>
            <!-- 			Checkpoint response received -->
            <wireTap id="bs9_wireTap3" uri="direct:gen_log"/>
        </route>
    </routeContext>
</beans>
